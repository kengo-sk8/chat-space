.chat-main
  .main-header
    .header-leftbox
      %h2.current-group 
        = @group.name
      %ul.member-list
        Member:
        %li.member-first
          - @group.users.map do |a|
            = a.name
    = link_to edit_group_path(@group), class:"edit-btn" do
      Edit

  .messages
    = render @messages 

  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'input-text', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'input-box-image' do
          = icon('fas', 'image', class: 'image-icon"')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'submit-btn'

